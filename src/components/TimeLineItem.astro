---
import Line from '../components/Line.astro'

export interface TimeLineItemProps {
    from: number,
    to?: number | "Present"
    title:string
    desc: string
    className?:string
    subtitle?: string
}

interface Props extends TimeLineItemProps {}

const {className = "", desc, title, to, from, subtitle} = Astro.props

---
<div class={`flex ${className} `}>
    <div class="flex flex-col w-1/5 items-start">
        <p class="text-3xl font-bold font-code test">{from} {to ? "-":""}</p>
        <p class="text-lg">{to}</p>
        <Line class="mt-3 w-fit ml-10" />        
    </div>
    <div class="flex flex-col mx-5 w-4/5">
        <h3 class="font-code text-accent-300 text-3xl font-semibold">{title}</h3>
        <h4 class="mb-4 text-xl font-medium">{subtitle}</h4>
        {desc}
    </div>
</div>