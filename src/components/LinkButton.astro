---

interface Props {
    link: string
    className?:string
}

const { link, className = "" } = Astro.props

---
<a href={link} type="button" target="_blank" class={`text-white-100 bg-gradient-to-r from-accent-500 via-accent-600 to-accent-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-accent-300 dark:focus:ring-accent-800 shadow-lg shadow-accent-500/50 dark:shadow-lg dark:shadow-accent-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 flex gap-x-2 h-fit ${className}`}>
    <slot name="before" />
    <slot />
    <slot name="after" />
</a>